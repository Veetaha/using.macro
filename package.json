{
    "name": "using.macro",
    "version": "1.0.2",
    "description": "babel-plugin-macro for automatic try-finally blocks and C++ like RAII resource management",
    "main": "build/using.macro.js",
    "types": "build/using.macro.d.ts",
    "devDependencies": {
        "@babel/cli": "^7.6.2",
        "@babel/core": "^7.6.2",
        "@babel/plugin-transform-modules-commonjs": "^7.6.0",
        "@babel/preset-typescript": "^7.6.0",
        "@babel/traverse": "^7.6.2",
        "@babel/types": "^7.6.1",
        "@types/babel__core": "^7.1.3",
        "@types/babel__traverse": "^7.0.7",
        "@types/jest": "^24.0.18",
        "@types/node": "^12.7.10",
        "babel-plugin-closure-elimination": "^1.3.0",
        "babel-plugin-macros": "^2.6.1",
        "babel-plugin-tester": "^7.0.1",
        "coveralls": "^3.0.6",
        "for-own.macro": "^1.0.0",
        "jest": "^24.9.0",
        "npm-check-updates": "^3.1.23",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.0",
        "ts-jest": "^24.1.0",
        "tslint": "^5.20.0",
        "typescript": "^3.6.3"
    },
    "scripts": {
        "tsc": "tsc --emitDeclarationOnly",
        "lint": "tslint --project tsconfig.json",
        "babel": "babel src --out-dir build --extensions \".ts,.tsx\" --source-maps inline",
        "build": "  npm-run-all --parallel lint tsc babel",
        "rebuild": "npm-run-all clean build",
        "clean": "rimraf build",
        "bump-deps": "ncu -u && npm i",
        "test": "jest && cat coverage/lcov.info | coveralls",
        "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
    },
    "keywords": [
        "babel-plugin-macros",
        "babel-plugin-macro",
        "macro",
        "emscripten",
        "embind",
        "resources",
        "management",
        "destructor",
        "free",
        "smart-ptr",
        "smart pointer",
        "unique_ptr",
        "shared_ptr",
        "scoped",
        "automatic",
        "lifetime",
        "raii",
        "RAII",
        "c++",
        "cpp",
        "using",
        "using var",
        "handles",
        "handle",
        "try",
        "finally",
        "try-using",
        "babel",
        "typescript"
    ],
    "author": "Veetaha",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Veetaha/using.macro.git"
    }
}
